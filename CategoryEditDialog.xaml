<Window x:Class="KioskAppServer.CategoryEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioskAppServer"
        mc:Ignorable="d"
        Title="카테고리 변경 창" Height="150" Width="300">
    <StackPanel>
        <TextBlock Text="카테고리의 바꿀 이름을 입력하세요" HorizontalAlignment="Center"/>
        <TextBox x:Name="CategoryNameTextBox" Margin="10,0,10,10" Text="{Binding CategoryName, Mode=TwoWay}"/>
        <Button Content="확인" Width="200" Command="{Binding ConfirmCommand}"/>
    </StackPanel>
</Window>
